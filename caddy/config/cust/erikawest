# -------------------------------
# erikawest
# -------------------------------

erikawest.upay.me {
    root * /www/upaymeui
#    rewrite / /thoregon.html
    uri replace /etc/ /.etc/erikawest/ # config for domain
    import modules
    reverse_proxy /redir/* upaymeerikawest:30101   # port to the vendors service agent
    reverse_proxy /content/* upaymeerikawest:30101   # port to the vendors service agent
    reverse_proxy /checkout/* upaymeerikawest:30101   # port to the vendors service agent
    reverse_proxy /stripe/* upaymeerikawest:30101   # port to the vendors service agent
    reverse_proxy /paypal/* upaymeerikawest:30101   # port to the vendors service agent
    file_server
    handle_errors {
        rewrite * /upayme-splash.html
        file_server
    }
}