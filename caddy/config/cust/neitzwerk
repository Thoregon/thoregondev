# -------------------------------
# neitzwerk
# -------------------------------

neitzwerk.upay.me {
    root * /www/upaymeui
    uri replace /etc/ /.etc/neitzwerk/ # config for domain
    import modules
    reverse_proxy /content/* upaymeneitzwerk:30102   # port to the vendors service agent
    reverse_proxy /content/* upaymeneitzwerk:30102   # port to the vendors service agent
    reverse_proxy /checkout/* upaymeneitzwerk:30102   # port to the vendors service agent
    reverse_proxy /stripe/* upaymeneitzwerk:30102   # port to the vendors service agent
    reverse_proxy /paypal/* upaymeneitzwerk:30102   # port to the vendors service agent
    file_server
    handle_errors {
        rewrite * /upayme-splash.html
        file_server
    }
}
